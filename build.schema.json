{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "CustomBuildCommand": {
            "properties": {
                "command": {
                    "description": "The command to run in that workspace while in production mode",
                    "type": "string"
                },
                "devcommand": {
                    "description": "The command to run in that workspace while in development mode",
                    "type": "string"
                },
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "custom"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ESBuildCommand": {
            "properties": {
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "in": {
                    "anyOf": [
                        {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        },
                        {
                            "type": "string"
                        }
                    ],
                    "description": "File(s) to process"
                },
                "out": {
                    "default": "dist",
                    "description": "File to bundle to or directory to bundle to.\nTreated as a file when {@link ESBuildCommand.in} is a string, treated as a directory when {@link ESBuildCommand.in} is an array of strings",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "esbuild"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "NextBuildCommand": {
            "properties": {
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "port": {
                    "default": 3000,
                    "description": "Port to use in development mode",
                    "type": "number"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "next"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "SnowpackBuildCommand": {
            "properties": {
                "alternateConfig": {
                    "description": "Relative path to the alternate config",
                    "type": "string"
                },
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "snowpack"
                    ],
                    "type": "string"
                },
                "useAlternateConfig": {
                    "description": "Whether or not to use an alternate config",
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "StorybookBuildCommand": {
            "properties": {
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "out": {
                    "description": "The out directory to pass in production mode",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "port": {
                    "default": 6006,
                    "description": "The port to use in development mode",
                    "type": "number"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "storybook"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "TSBuildCommand": {
            "description": "Typescript build information",
            "properties": {
                "alternateConfig": {
                    "description": "Relative path to the alternate config",
                    "type": "string"
                },
                "dontUsePackagePrefix": {
                    "description": "Enable if you dont want to prefix this with the package prefix",
                    "type": "boolean"
                },
                "id": {
                    "description": "Name of the build",
                    "type": "string"
                },
                "package": {
                    "description": "The name of the package/workspace to give yarn",
                    "type": "string"
                },
                "runInEnvironments": {
                    "description": "Environments to run in",
                    "items": {
                        "enum": [
                            "dev",
                            "prod"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "description": "The type of build",
                    "enum": [
                        "typescript"
                    ],
                    "type": "string"
                },
                "useAlternateConfig": {
                    "description": "Whether or not to use an alternate config",
                    "type": "boolean"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "allowedTargets": {
            "description": "Platforms to support and build commands for",
            "items": {
                "enum": [
                    "linux",
                    "win"
                ],
                "type": "string"
            },
            "type": "array"
        },
        "commands": {
            "description": "The commands to run.\nWill run in the order found.",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/TSBuildCommand"
                    },
                    {
                        "$ref": "#/definitions/CustomBuildCommand"
                    },
                    {
                        "$ref": "#/definitions/SnowpackBuildCommand"
                    },
                    {
                        "$ref": "#/definitions/StorybookBuildCommand"
                    },
                    {
                        "$ref": "#/definitions/NextBuildCommand"
                    },
                    {
                        "$ref": "#/definitions/ESBuildCommand"
                    }
                ]
            },
            "type": "array"
        },
        "enableTerminal": {
            "default": false,
            "description": "Whether or not to enable the windows terminal when on windows and in dev mode",
            "type": "boolean"
        },
        "packagePrefix": {
            "default": "",
            "description": "What to prefix package names with",
            "type": "string"
        }
    },
    "type": "object"
}

